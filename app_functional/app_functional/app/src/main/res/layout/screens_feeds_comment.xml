<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fafafa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout56"
        android:background="#fafafa"
        android:paddingTop="8dp"
        android:paddingBottom="8dp">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/test_dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FFFFFFFF"
            android:id="@+id/user_pic_view"
            android:layout_marginLeft="16dp"/>
        <!-- Color used for send blue = #0D47A1 -->

        <njdsoftware.app_functional.CustomWidgets.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="njdzxx"
            android:textColor="#0D47A1"
            android:textSize="14sp"
            android:id="@+id/user_name_view"
            android:layout_alignTop="@+id/user_pic_view"
            android:layout_toRightOf="@+id/user_pic_view"
            android:layout_toEndOf="@+id/user_pic_view"
            android:layout_marginLeft="16dp"
            android:alpha=".8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excellent results. Many congratulations and good luck for the upcoming GP."
            android:textColor="#000000"
            android:alpha=".87"
            android:textSize="13sp"
            android:id="@+id/user_bio_view"
            android:layout_below="@+id/user_name_view"
            android:layout_alignLeft="@+id/user_name_view"
            android:layout_alignStart="@+id/user_name_view"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp" />

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/imageButton14"
            android:layout_below="@+id/user_bio_view"
            android:layout_centerHorizontal="true"
            android:background="@drawable/ic_like_dark"
            android:layout_marginTop="4dp" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="32dp"
            android:layout_marginLeft="40dp"
            android:layout_below="@+id/user_bio_view"
            android:layout_toRightOf="@+id/imageButton14"
            android:layout_toEndOf="@+id/imageButton14"
            android:layout_marginStart="40dp"
            android:paddingLeft="4dp"
            android:paddingRight="4dp"
            android:id="@+id/relativeLayout57"
            android:layout_marginTop="4dp">
            <ImageButton
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:id="@+id/imageButton15"
                android:layout_centerVertical="true"
                android:background="@drawable/ic_like_dark" />
            <njdsoftware.app_functional.CustomWidgets.CustomFontTextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="13sp"
                android:text="7"
                android:textColor="#000000"
                android:alpha=".8"
                android:layout_alignBottom="@+id/imageButton15"
                android:layout_toRightOf="@+id/imageButton15"
                android:layout_toEndOf="@+id/imageButton15"
                android:paddingBottom="2dp" />
        </RelativeLayout>

        <ImageButton
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:id="@+id/imageButton16"
            android:background="@drawable/ic_more_vert"
            android:layout_below="@+id/user_bio_view"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp"
            android:layout_marginTop="4dp" />

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="140dp"
        android:id="@+id/relativeLayout56"
        android:background="#fafafa"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/test_dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FFFFFFFF"
            android:id="@+id/user_pic_view"
            android:layout_marginLeft="16dp"/>
        <!-- Color used for send blue = #0D47A1 -->

        <njdsoftware.app_functional.CustomWidgets.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="njdzxx"
            android:textColor="#0D47A1"
            android:textSize="14sp"
            android:id="@+id/user_name_view"
            android:layout_alignTop="@+id/user_pic_view"
            android:layout_toRightOf="@+id/user_pic_view"
            android:layout_toEndOf="@+id/user_pic_view"
            android:layout_marginLeft="16dp"
            android:alpha=".8" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Excellent results. Many congratulations and good luck for the upcoming GP."
            android:textColor="#000000"
            android:alpha=".87"
            android:textSize="13sp"
            android:id="@+id/user_bio_view"
            android:layout_below="@+id/user_name_view"
            android:layout_alignLeft="@+id/user_name_view"
            android:layout_alignStart="@+id/user_name_view"
            android:layout_marginTop="4dp"
            android:layout_marginRight="16dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="Like"
            android:id="@+id/btnAccept"
            android:textSize="10sp"
            android:padding="0dp"
            android:layout_below="@+id/user_bio_view"
            android:layout_centerHorizontal="true" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:text="5 likes"
            android:id="@+id/btnReject"
            android:textSize="10sp"
            android:padding="0dp"
            android:layout_below="@+id/user_bio_view"
            android:layout_toRightOf="@+id/btnAccept"
            android:layout_toEndOf="@+id/btnAccept"
            android:layout_marginLeft="16dp" />

        <Button
            android:layout_width="60dp"
            android:layout_height="40dp"
            android:id="@+id/button14"
            android:textSize="10sp"
            android:padding="0dp"
            android:layout_alignBottom="@+id/btnReject"
            android:layout_toRightOf="@+id/btnReject"
            android:layout_toEndOf="@+id/btnReject"
            android:layout_marginLeft="16dp"
            android:text="MORE" />

    </RelativeLayout>

</RelativeLayout>