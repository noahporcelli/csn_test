<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#212121">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/test_dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FFFFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nathan Day beat David Potter in a challenge."
            android:id="@+id/user_name_view"
            android:layout_alignTop="@+id/user_pic_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="56dp"

            android:textSize="14sp"
            android:textColor="#ffffff"
            android:alpha="1"
            android:layout_toStartOf="@+id/relativeLayout11"
            android:layout_toLeftOf="@+id/relativeLayout11"
            android:minLines="2" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot;Couldn&apos;t be happier. Not at all how..."
            android:id="@+id/user_bio_view"
            android:layout_below="@+id/user_name_view"
            android:layout_alignLeft="@+id/user_name_view"
            android:layout_alignStart="@+id/user_name_view"

            android:textSize="13sp"
            android:textColor="#ffffff"
            android:alpha="0.7"
            android:paddingTop="4dp"
            android:layout_toLeftOf="@+id/relativeLayout11"
            android:layout_toStartOf="@+id/relativeLayout11"
            android:layout_marginRight="8dp"
            android:maxLines="1" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_pic_view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-4dp"
            android:id="@+id/relativeLayout11"
            android:layout_alignBottom="@+id/user_bio_view">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_trophy"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/type_image" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/ic_like"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:id="@+id/like_num_text"
                    android:layout_toRightOf="@+id/imageView2"
                    android:text="5"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:alpha="0.7"
                    android:paddingLeft="2dp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/ic_comment"
                    android:layout_toRightOf="@+id/like_num_text"
                    android:layout_marginLeft="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/imageView3"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:alpha="0.7"
                    android:paddingLeft="2dp"
                    android:id="@+id/comment_num_text" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Additional info"
            android:id="@+id/textView13"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true"
            android:textSize="24sp"
            android:layout_marginTop="24dp"
            android:layout_marginBottom="24dp"
            android:textColor="#ffffff"
            android:alpha="0.7" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:alpha="0.5"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:id="@+id/imageButton2"
                android:layout_margin="16dp"
                android:layout_alignParentTop="true"
                android:src="@drawable/ic_like"
                android:background="@null"
                android:layout_alignParentLeft="true" />
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@null"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton2"
                android:id="@+id/imageButton6"
                android:src="@drawable/ic_comment"
                />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="48dp"
                android:gravity="center"
                android:background="?android:selectableItemBackground"
                android:id="@+id/relativeLayout12"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/imageButton6"
                android:layout_marginLeft="16dp"
                android:layout_marginTop="16dp"
                android:layout_marginRight="16dp"
                android:layout_marginBottom="16dp">

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView4"
                    android:src="@drawable/ic_like"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />

                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView5"
                    android:src="@drawable/ic_comment"
                    android:layout_toRightOf="@+id/like_num_text_2"
                    android:layout_marginLeft="8dp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:id="@+id/like_num_text_2"
                    android:layout_toRightOf="@+id/imageView4"
                    android:text="5"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:allowUndo="false"
                    android:alpha="1" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/imageView5"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:paddingLeft="2dp"
                    android:allowUndo="false"
                    android:alpha="1"
                    android:id="@+id/comment_num_text_2" />
            </RelativeLayout>
            <ImageButton
                android:layout_width="48dp"
                android:layout_height="48dp"
                android:layout_margin="16dp"
                android:background="@null"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/relativeLayout12"
                android:id="@+id/imageButton7"
                android:src="@drawable/ic_remove_friend"
                />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>