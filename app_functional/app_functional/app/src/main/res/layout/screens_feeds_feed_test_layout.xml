<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#212121">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="12dp"
        android:paddingRight="16dp"
        android:paddingBottom="12dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/test_dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FFFFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_marginTop="4dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Nathan Day has unlocked achievement: To achieve, you must believe."
            android:id="@+id/user_name_view"
            android:layout_alignTop="@+id/user_pic_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="56dp"

            android:textSize="13sp"
            android:textColor="#ffffff"
            android:alpha="1"
            android:layout_toStartOf="@+id/relativeLayout11"
            android:layout_toLeftOf="@+id/relativeLayout11"
            android:minLines="2"
            android:focusableInTouchMode="false" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="&quot;Couldn&apos;t be happier. Not at all how..."
            android:id="@+id/user_bio_view"
            android:layout_below="@+id/user_name_view"
            android:layout_alignLeft="@+id/user_name_view"
            android:layout_alignStart="@+id/user_name_view"

            android:textSize="13sp"
            android:textColor="#ffffff"
            android:alpha="0.7"
            android:paddingTop="4dp"
            android:layout_toLeftOf="@+id/relativeLayout11"
            android:layout_toStartOf="@+id/relativeLayout11"
            android:layout_marginRight="8dp"
            android:maxLines="1" />
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignTop="@+id/user_pic_view"
            android:layout_alignParentRight="true"
            android:layout_marginTop="-4dp"
            android:id="@+id/relativeLayout11"
            android:layout_alignBottom="@+id/user_bio_view">
            <ImageView
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:src="@mipmap/ic_trophy"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:id="@+id/type_image" />
            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_alignParentBottom="true">
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView2"
                    android:src="@drawable/ic_like"
                    android:layout_alignParentTop="true"
                    android:layout_alignParentLeft="true"
                    android:layout_alignParentStart="true" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:id="@+id/like_num_text"
                    android:layout_toRightOf="@+id/imageView2"
                    android:text="5"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:alpha="0.7"
                    android:paddingLeft="2dp" />
                <ImageView
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:id="@+id/imageView3"
                    android:src="@drawable/ic_comment"
                    android:layout_toRightOf="@+id/like_num_text"
                    android:layout_marginLeft="8dp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:textSize="12sp"
                    android:layout_toRightOf="@+id/imageView3"
                    android:text="1"
                    android:textColor="#ffffff"
                    android:gravity="center"
                    android:alpha="0.7"
                    android:paddingLeft="2dp"
                    android:id="@+id/comment_num_text" />

            </RelativeLayout>

        </RelativeLayout>
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout16"
        android:paddingLeft="36dp"
        android:paddingRight="36dp"
        android:paddingTop="2dp"
        android:paddingBottom="16dp" >

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView29"
            android:layout_marginTop="8dp"
            android:layout_centerHorizontal="true" >

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"
                android:textSize="13sp"
                android:id="@+id/textView26"
                android:alpha=".7"
                android:text="Achievements unlocked:"

                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="#ffffff"

                android:text="74"
                android:textSize="13sp"
                android:id="@+id/textView27"
                android:layout_toRightOf="@+id/textView26"
                android:layout_toEndOf="@+id/textView26"
                android:layout_marginLeft="8dp" />
        </RelativeLayout>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:text="To achieve, you must believe"
            android:textSize="13sp"
            android:id="@+id/textView28"

            android:layout_alignTop="@+id/imageView7"
            android:layout_toRightOf="@+id/imageView7"
            android:layout_toEndOf="@+id/imageView7"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="2dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="#ffffff"
            android:textSize="13sp"
            android:id="@+id/textView29"
            android:alpha=".7"
            android:text="Lose 5 challenges in a row. "

            android:layout_below="@+id/textView28"
            android:layout_alignLeft="@+id/textView28"
            android:layout_alignStart="@+id/textView28"
            android:layout_marginTop="4dp" />

        <ImageView
            android:layout_width="32dp"
            android:layout_height="32dp"
            android:src="@mipmap/ic_trophy"
            android:id="@+id/imageView7"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:alpha="0.5"
        android:layout_marginLeft="48dp"
        android:layout_marginRight="48dp" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageButton2"
            android:layout_centerHorizontal="true"
            android:layout_margin="16dp"
            android:layout_alignParentTop="true"
            android:src="@drawable/ic_comment"
            android:background="@null"/>
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:id="@+id/imageButton3"
            android:layout_alignParentTop="true"
            android:layout_toLeftOf="@+id/imageButton2"
            android:src="@drawable/ic_like"
            android:background="@null"
            android:layout_marginRight="36dp"
            android:layout_marginLeft="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginBottom="16dp" />

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="48dp"
            android:gravity="center"
            android:background="?android:selectableItemBackground"
            android:id="@+id/relativeLayout12"
            android:layout_alignParentTop="true"
            android:layout_toRightOf="@+id/imageButton2"
            android:layout_marginLeft="26dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="16dp"
            android:layout_marginBottom="16dp">

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView4"
                android:src="@drawable/ic_like"
                android:layout_alignParentTop="true"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

            <ImageView
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:id="@+id/imageView5"
                android:src="@drawable/ic_comment"
                android:layout_toRightOf="@+id/like_num_text_2"
                android:layout_marginLeft="8dp" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:id="@+id/like_num_text_2"
                android:layout_toRightOf="@+id/imageView4"
                android:text="5"
                android:textColor="#ffffff"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:allowUndo="false"
                android:alpha="1" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="20dp"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/imageView5"
                android:text="1"
                android:textColor="#ffffff"
                android:gravity="center"
                android:paddingLeft="2dp"
                android:allowUndo="false"
                android:alpha="1"
                android:id="@+id/comment_num_text_2" />
        </RelativeLayout>
    </RelativeLayout>

</LinearLayout>