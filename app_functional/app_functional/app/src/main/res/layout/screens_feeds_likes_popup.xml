<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:id="@+id/likes_popup"
    android:background="#4C000000">
    <android.support.v7.widget.CardView
        android:layout_width="320dp"
        android:layout_height="360dp"
        android:layout_centerInParent="true"
        card_view:cardCornerRadius="2dp"
        card_view:cardBackgroundColor="#fafafa"
        card_view:cardElevation="8dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"
            android:paddingTop="4dp"
            android:paddingBottom="4dp">
            <include
                layout="@layout/screens_feeds_liker_friend_item"
                android:layout_width="match_parent"
                android:layout_height="56dp" />
            <include
                layout="@layout/common_list_divider_dark"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <include
                layout="@layout/screens_feeds_liker_friend_item"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/include16" />
            <include
                layout="@layout/common_list_divider_dark"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <include
                layout="@layout/screens_feeds_liker_not_friend_item"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/include17" />
            <include
                layout="@layout/common_list_divider_dark"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <include
                layout="@layout/screens_feeds_liker_not_friend_item"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:id="@+id/include18" />
            <include
                layout="@layout/common_list_divider_dark"
                android:layout_width="match_parent"
                android:layout_height="1dp" />
            <include
                layout="@layout/screens_feeds_likes_footer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />
        </LinearLayout>
    </android.support.v7.widget.CardView>
</RelativeLayout>
