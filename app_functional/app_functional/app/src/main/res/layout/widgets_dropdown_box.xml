<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="128dp"
    android:layout_height="24dp"
    android:background="@drawable/rounded_corners_white_2dp"
    android:id="@+id/relativeLayout49"
    android:alpha=".95">

    <TextView
        android:layout_width="100dp"
        android:layout_height="wrap_content"
        android:id="@+id/textView130"
        android:textSize="14sp"
        android:textColor="#000000"
        android:layout_alignParentStart="true"
        android:text="Select value"
        android:alpha=".7"
        android:layout_centerVertical="true"
        android:layout_alignParentLeft="true"
        android:paddingLeft="8dp"
        android:paddingTop="4dp"
        android:paddingBottom="4dp"
        android:clickable="false"/>

    <ImageButton
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:id="@+id/imageButton11"
        android:src="@drawable/ic_dropdown_grey"
        android:background="@android:color/transparent"
        android:layout_alignParentEnd="false"
        android:layout_alignParentTop="true"
        android:layout_toRightOf="@+id/textView130"
        android:layout_marginLeft="4dp"
        android:layout_centerVertical="true"
        android:clickable="false"/>
</RelativeLayout>