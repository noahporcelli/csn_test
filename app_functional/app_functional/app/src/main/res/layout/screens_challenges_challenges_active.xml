<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
android:layout_width="match_parent"
android:layout_height="match_parent"
xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="#212121">
    <include
        layout="@layout/screens_challenges_challenge_active_item"
        android:id="@+id/challenge_included"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/view6" />

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:alpha=".5"
        android:layout_below="@+id/relativeLayout23"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/view6" />
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/relativeLayout23"
        android:paddingTop="8dp"
        android:paddingBottom="8dp"
        android:layout_marginTop="80dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="OPPONENT"
            android:textColor="#ffffff"
            android:alpha=".7"
            android:textSize="10sp"
            android:id="@+id/textView62"
            android:layout_marginLeft="50dp"
            android:textIsSelectable="false"
            android:layout_alignBottom="@+id/textView102"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginStart="50dp" />

        <TextView
            android:layout_width="80dp"
            android:layout_height="wrap_content"
            android:text="TIME REMAINING"
            android:textColor="#ffffff"
            android:alpha=".7"
            android:textSize="10sp"
            android:id="@+id/textView63"
            android:textIsSelectable="false"
            android:gravity="bottom|right"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="16dp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="CURRENT POSITION"
            android:textColor="#ffffff"
            android:alpha=".7"
            android:textSize="10sp"
            android:id="@+id/textView102"
            android:textIsSelectable="false"
            android:minWidth="50dp"
            android:gravity="bottom|right"
            android:layout_toLeftOf="@+id/textView63"
            android:layout_toStartOf="@+id/textView63"
            android:layout_marginRight="16dp"
            android:layout_alignParentTop="false"
            android:layout_alignBottom="@+id/textView63" />

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:alpha=".12"
        android:id="@+id/view7"
        android:layout_below="@+id/challenge_included"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:id="@+id/relativeLayout43"
        android:layout_below="@+id/view7"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="12,387 Total"
            android:textColor="#ffffff"
            android:alpha=".7"
            android:textSize="13sp"
            android:id="@+id/textView65"
            android:layout_alignParentStart="false"
            android:layout_centerHorizontal="true" />
    </RelativeLayout>

</RelativeLayout>
