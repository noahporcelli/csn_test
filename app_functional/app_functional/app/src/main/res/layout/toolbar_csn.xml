<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android" android:visibility="visible"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:elevation="4dp"
    android:background="@color/primary">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="56dp"
        android:padding="4dp"
        android:animateLayoutChanges="true"
        android:id="@+id/tool_bar_top_row"
        android:layout_alignParentRight="true">
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentStart="true"
            android:id="@+id/app_bar_menu_icon"
            android:background="@null"
            android:src="@drawable/ic_menu"
            android:visibility="visible" />

        <njdsoftware.app_functional.CustomWidgets.CustomFontTextView
            android:id="@+id/app_bar_text"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:layout_alignParentTop="true"
            android:layout_marginLeft="-56dp"
            android:layout_toEndOf="@id/app_bar_menu_icon"
            android:gravity="center|center_vertical"
            android:text="CSN"
            android:textColor="#ffffff"
            android:textSize="20sp"
            android:visibility="visible" />
        <ImageButton
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:id="@+id/app_bar_more_icon"
            android:background="@null"
            android:src="@drawable/ic_more_vert_white"
            android:visibility="visible" />
        <njdsoftware.app_functional.CustomWidgets.CustomFontTextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="0dp"
            android:text="\u2039"
            android:alpha="0.8"
            android:textColor="#ccffffff"
            android:gravity="center"
            android:textSize="28sp"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:id="@+id/app_bar_expand_icon"
            android:visibility="gone"/>
        <njdsoftware.app_functional.CustomWidgets.CustomFontTextView
            android:layout_width="48dp"
            android:layout_height="48dp"
            android:padding="0dp"
            android:text="\u203A"
            android:textColor="#ccffffff"
            android:gravity="center"
            android:textSize="28sp"
            android:layout_toLeftOf="@+id/app_bar_more_icon"
            android:layout_marginRight="8dp"
            android:id="@+id/app_bar_collapse_icon"
            android:visibility="gone"/>
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="56dp"
        android:layout_height="wrap_content"
        android:id="@+id/tool_bar_second_row"
        android:layout_alignRight="@id/tool_bar_top_row"
        android:layout_below="@id/tool_bar_top_row"
        android:background="#2962FF">
        <njdsoftware.app_functional.CustomWidgets.TextButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/createRouteBtn"
            android:background="#2962FF"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="ADD"
            android:visibility="gone"/>
        <njdsoftware.app_functional.CustomWidgets.TextButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/previewBackBtn"
            android:background="#2962FF"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="BACK"
            android:visibility="gone" />
        <njdsoftware.app_functional.CustomWidgets.TextButton
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:id="@+id/cancelCreateBtn"
            android:background="#2962FF"
            android:textColor="#ffffff"
            android:textSize="16sp"
            android:text="\u2716"
            android:visibility="gone" />
    </RelativeLayout>

    <android.support.design.widget.TabLayout
        android:id="@+id/friends_messages_tabs"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentTop="true"
        app:tabGravity="fill"
        app:tabIndicatorColor="#ffffff"
        app:tabMode="fixed" />
</RelativeLayout>

