<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="56dp"
    android:background="#fafafa">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:id="@+id/relativeLayout56">
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/test_dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FFFFFFFF"
            android:layout_centerVertical="true"
            android:id="@+id/user_pic_view"
            android:layout_marginLeft="16dp"/>
        <!-- Color used for send blue = #0D47A1 -->

        <njdsoftware.app_functional.CustomWidgets.CustomFontTextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="njdzxx"
            android:textColor="#000000"
            android:alpha=".87"
            android:textSize="14sp"
            android:id="@+id/user_name_view"
            android:layout_alignTop="@+id/user_pic_view"
            android:layout_toRightOf="@+id/user_pic_view"
            android:layout_toEndOf="@+id/user_pic_view"
            android:layout_marginLeft="16dp"
            android:textStyle="bold" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2 mutual friends"
            android:textColor="#000000"
            android:alpha=".7"
            android:textSize="14sp"
            android:id="@+id/user_bio_view"
            android:layout_below="@+id/user_name_view"
            android:layout_alignLeft="@+id/user_name_view"
            android:layout_alignStart="@+id/user_name_view"
            android:layout_marginTop="4dp" />
        <njdsoftware.app_functional.CustomWidgets.CustomFontTextView
            android:layout_width="99dp"
            android:layout_height="36dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="16dp"
            android:layout_marginLeft="4dp"
            android:layout_centerVertical="true"
            android:text="Friends  \u2714"
            android:textColor="#000000"
            android:alpha="0.7"
            android:paddingRight="12dp"
            android:paddingLeft="12dp"
            android:textSize="12sp"
            android:gravity="center"/>

    </RelativeLayout>

</RelativeLayout>