<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_gravity="center_horizontal"
    android:paddingLeft="36dp"
    android:paddingRight="36dp"
    android:paddingBottom="16dp"
    android:background="#212121">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/friend_image"
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/test_dp"
        app:civ_border_width="0dp"
        app:civ_border_color="#FFFFFFFF"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ash9888"
        android:id="@+id/friend_name"
        android:layout_alignTop="@+id/friend_image"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="56dp"

        android:textSize="14sp"
        android:textColor="#00ff00"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="&quot;Most people call me Ash, but you can call me tonight.&quot;"
        android:id="@+id/friend_motto"
        android:layout_below="@+id/friend_name"
        android:layout_alignLeft="@+id/friend_name"
        android:layout_alignStart="@+id/friend_name"

        android:textSize="13sp"
        android:textColor="#ffffff"
        android:alpha="0.7"
        android:minLines="2"
        android:paddingTop="4dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="#00ff00"

        android:text="21 mutual friends"
        android:textSize="14sp"
        android:id="@+id/textView8"
        android:paddingTop="4dp"
        android:textStyle="bold"
        android:layout_below="@+id/friend_motto"
        android:layout_alignLeft="@+id/friend_motto"
        android:layout_alignStart="@+id/friend_motto" />

</RelativeLayout>