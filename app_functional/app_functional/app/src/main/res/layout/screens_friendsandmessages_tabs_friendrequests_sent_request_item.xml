<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="16dp"
        android:paddingTop="16dp"
        android:paddingRight="16dp"
        android:paddingBottom="16dp"
        android:id="@+id/permanent_section_view"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:clickable="false">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/user_pic_view"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/test_dp"
            app:civ_border_width="0dp"
            app:civ_border_color="#FFFFFFFF"
            android:layout_alignParentTop="true"
            android:layout_alignParentLeft="true" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="njdzzx"
            android:id="@+id/user_name_view"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="false"
            android:layout_marginLeft="56dp"

            android:textSize="14sp"
            android:textColor="#ffffff"
            android:alpha="1"
            android:layout_centerVertical="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/expandable_section_view">

        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true">
            <njdsoftware.app_functional.CustomWidgets.TextButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:clickable="true"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:id="@+id/btnHidden"
                android:text="ACCEPT"
                android:layout_alignParentTop="true"
                android:layout_marginBottom="16dp"
                android:layout_marginRight="32dp"
                android:visibility="visible"
                android:alpha="1" />

            <njdsoftware.app_functional.CustomWidgets.TextButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_toRightOf="@+id/btnHidden"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="32dp"
                style="@style/Widget.AppCompat.Button.Borderless"
                android:textColor="#ffffff"
                android:textSize="12sp"
                android:id="@+id/btnCancelRequest"
                android:text="CANCEL REQUEST"
                android:alpha="1" />
        </RelativeLayout>

    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="#ffffff"
        android:alpha=".12"
        android:id="@+id/end_divider_view" />
</LinearLayout>